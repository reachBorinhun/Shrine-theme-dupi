        },
        {
          "value": "line-1",
          "label": "Line 1"
        },
        {
          "value": "line-2",
          "label": "Line 2"
        },
        {
          "value": "line-3",
          "label": "Line 3"
        }
      ],
      "default": "none"
    },
    {
      "type": "color_background",
      "id": "title_highlight_2_gradient",
      "label": "Text gradient",
      "default": "linear-gradient(57deg, rgba(249, 119, 255, 1) 8%, rgba(54, 212, 255, 1) 47%, rgba(43, 252, 135, 1) 83%)",
      "visible_if": "{{ block.settings.title_highlight_2 == 'gradient-color' }}"
