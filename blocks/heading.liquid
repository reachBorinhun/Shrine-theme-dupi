{% render 'heading-block', block: block %}

{% schema %}
{
  "name": "Heading",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Talk about your brand",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Highlight 1",
      "info": "Put words in BOLD to highlight them with this style."
    },
    {
      "type": "select",
      "id": "title_highlight_1",
      "label": "Heading words highlight 1",
      "options": [
        {
          "value": "solid-color",
          "label": "Color"
        },
        {
          "value": "gradient-color",
          "label": "Gradient"
        },
        {
          "value": "bg-color",
          "label": "Background"
        },
        {
          "value": "underline-solid",
          "label": "Underline"
        },
        {
          "value": "underline-gradient",
          "label": "Gradient underline"
        },
        {
          "value": "line-1",
          "label": "Line 1"
        },
        {
          "value": "line-2",
          "label": "Line 2"
        },
        {
          "value": "line-3",
          "label": "Line 3"
        }
      ],
      "default": "solid-color"
    },
    {
      "type": "color_background",
      "id": "title_highlight_1_gradient",
      "label": "Text gradient",
      "default": "linear-gradient(57deg, rgba(249, 119, 255, 1) 8%, rgba(54, 212, 255, 1) 47%, rgba(43, 252, 135, 1) 83%)",
      "visible_if": "{{ block.settings.title_highlight_1 == 'gradient-color' }}"
    },
    {
      "type": "color",
      "id": "title_highlight_1_bg-color",
      "label": "Text background color",
      "default": "#F9EFFF",
      "visible_if": "{{ block.settings.title_highlight_1 == 'bg-color' }}"
    },
    {
      "type": "color",
      "id": "title_highlight_1_color",
      "label": "Text color",
      "default": "#6D388B",
      "visible_if": "{{ block.settings.title_highlight_1 == 'solid-color' or block.settings.title_highlight_1 == 'bg-color' }}"
    },
    {
      "type": "range",
      "id": "highlighted-1_border_radius",
      "label": "Corner radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 8,
      "visible_if": "{{ block.settings.title_highlight_1 == 'bg-color' }}"
    },
    {
      "type": "range",
      "id": "highlighted-1_border_width",
      "min": 0,
      "max": 6,
      "step": 1,
      "unit": "px",
      "label": "Border thickness",
      "default": 0,
      "visible_if": "{{ block.settings.title_highlight_1 == 'bg-color' }}"
    },
    {
      "type": "select",
      "id": "highlighted-1_border",
      "label": "Border style",
      "options": [
        {
          "value": "solid",
          "label": "Solid"
        },
        {
          "value": "dashed",
          "label": "Dashed"
        }
      ],
      "default": "solid",
      "visible_if": "{{ block.settings.highlighted-1_border_width > 0 and block.settings.title_highlight_1 == 'bg-color' }}"
    },
    {
      "type": "color",
      "id": "highlighted-1_border_color",
      "label": "Border color",
      "default": "#6D388B",
      "visible_if": "{{ block.settings.highlighted-1_border_width > 0 and block.settings.title_highlight_1 == 'bg-color' }}"
    },
    {
      "type": "range",
      "id": "highlighted-1_padding-block",
      "label": "Vertical padding",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.3,
      "unit": "%",
      "info": "Relative to font size",
      "visible_if": "{{ block.settings.title_highlight_1 == 'bg-color' }}"
    },
    {
      "type": "range",
      "id": "highlighted-1_padding-inline",
      "label": "Horizontal padding",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "unit": "%",
      "default": 0.3,
      "info": "Relative to font size",
      "visible_if": "{{ block.settings.title_highlight_1 == 'bg-color' }}"
    },
    {
      "type": "range",
      "id": "title_highlight_1_underline-thickness",
      "label": "Underline thickness",
      "min": 0,
      "max": 6,
      "step": 1,
      "unit": "px",
      "default": 2,
      "visible_if": "{{ block.settings.title_highlight_1 == 'underline-solid' or block.settings.title_highlight_1 == 'underline-gradient' }}"
    },
    {
      "type": "color",
      "id": "title_highlight_1_underline-color",
      "label": "Underline color",
      "default": "#6D388B",
      "visible_if": "{{ block.settings.title_highlight_1 == 'underline-solid' }}"
    },
    {
      "type": "color_background",
      "id": "title_highlight_1_underline-color--gradient",
      "label": "Underline gradient color",
      "default": "linear-gradient(57deg, rgba(249, 119, 255, 1) 8%, rgba(54, 212, 255, 1) 47%, rgba(43, 252, 135, 1) 83%)",
      "visible_if": "{{ block.settings.title_highlight_1 == 'underline-gradient' }}"
    },
    {
      "type": "range",
      "id": "title_highlight_1_underline-color-position",
      "min": 0,
      "max": 100,
      "step": 5,
      "label": "Vertical position",
      "unit": "%",
      "default": 25,
      "visible_if": "{{ block.settings.title_highlight_1 == 'underline-solid' or block.settings.title_highlight_1 == 'underline-gradient' }}"
    },
    {
      "type": "color",
      "id": "title_highlight_1_handwritten-color",
      "label": "Stroke color",
      "default": "#6D388B",
      "visible_if": "{{ block.settings.title_highlight_1 == 'line-1' or block.settings.title_highlight_1 == 'line-2' or block.settings.title_highlight_1 == 'line-3' }}"
    },
    {
      "type": "range",
      "id": "title_highlight_1_handwritten-stroke-width",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Stroke thickness",
      "unit": "px",
      "default": 3,
      "visible_if": "{{ block.settings.title_highlight_1 == 'line-1' or block.settings.title_highlight_1 == 'line-2' or block.settings.title_highlight_1 == 'line-3' }}"
    },
    {
      "type": "range",
      "id": "title_highlight_1_handwritten-position",
      "min": 0,
      "max": 100,
      "step": 5,
      "label": "Vertical position",
      "unit": "%",
      "default": 60,
      "visible_if": "{{ block.settings.title_highlight_1 == 'line-1' or block.settings.title_highlight_1 == 'line-2' or block.settings.title_highlight_1 == 'line-3' }}"
    },
    {
      "type": "header",
      "content": "Highlight 2",
      "info": "Put words in ITALIC to highlight them with this style (keep it 'None' if you want to use default italic style)."
    },
    {
      "type": "select",
      "id": "title_highlight_2",
      "label": "Heading words highlight 2",
      "options": [
        {
